---
interface Props{
  img: string,
  title: string
}
const {img, title} = Astro.props
---
<div class="flex flex-col gap-5">
  <div class="mx-auto bg-accentfirstdm w-[100px] h-[100px] flex justify-center items-center rounded-full">
    <img class=" px-4 py-4" src={img} alt="">
  </div>
  <h3 class="text-white font-bold text-lg text-center px-6 text-pretty">{title}</h3>
</div>