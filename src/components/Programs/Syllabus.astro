---
interface Props {
  title: string,
  description1: string,
  description2: string,
  imgSyllabus: string,
  altImgSyllabus: string
}
const {title, description1, description2, imgSyllabus, altImgSyllabus} = Astro.props
---
<section class="pb-5 mt-20 relative z-[500] overflow-hidden" id="About">
  <div class="max-w-[85%] lg:max-w-[1024px] mx-auto grid grid-cols-1 lg:grid-cols-2 p-3 relative z-[400] gap-6">
    <div class="col-span-1 flex flex-col justify-center items-start">
      <h2 class="text-2xl font-bold text-accentdark pb-6 w-[80%]">{title}</h2>
      <div class="flex flex-col gap-3 text-pretty">
        <div>{description1}</div>
        <div>{description2}</div>
      </div>
    </div>
    <div class="col-span-1 flex justify-center items-center ">
      <img src={imgSyllabus} alt={altImgSyllabus} class="w-[380px] h-[380px]">
    </div>
  </div>
  <div class="bg-accentfirst absolute h-[180px] w-[100vw] overflow-hidden bottom-0 rounded-tl-[300px] transform scale-105 z-[10]"></div>
</section>