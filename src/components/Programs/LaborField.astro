---
import Check from '@components/icons/Check.astro'

interface Props {
  description: string,
  items: string[][]
}
const {description, items} = Astro.props
---
<section class=" mb-5" id="About">
  <div class="max-w-[85%] lg:max-w-[1024px] mx-auto p-3">
    <div class="flex flex-col justify-center items-start">
      <h2 class="text-2xl font-bold text-accentdark pb-6 w-[70%]">CAMPO LABORAL</h2>
      <div class="flex flex-col gap-3 text-pretty">
        <div>El <span class="font-bold">{description}</span> tiene la oportunidad de trabajar en una variedad de empresas, tanto del sector p√∫blico como privado, aplicando sus conocimientos y habilidades en roles profesionales como:</div>
        <div>
          {
            items.map(item => (
              <div class="flex gap-3 py-3"><Check class="text-accentdark"/><div><span class="font-bold">{item[0]}</span>{item[1]}</div></div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>