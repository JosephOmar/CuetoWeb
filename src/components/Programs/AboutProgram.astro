---
interface Props {
  title: string,
  description1: string,
  description2: string,
  imgAbout: string,
  altImgAbout: string
}
const {title, description1, description2, imgAbout, altImgAbout} = Astro.props
---
<section class="overflow-hidden" id="About">
  <div class="lg:max-w-[1024px] max-w-[85%] mx-auto grid grid-cols-1 lg:grid-cols-2 p-3 gap-6">
    <div class="col-span-1 flex flex-col justify-center items-start">
      <h2 class="text-2xl font-bold text-accentdark pb-6 w-[70%]">{title}</h2>
      <div class="flex flex-col gap-3 text-pretty">
        <div>{description1}</div>
        <div>{description2}</div>
      </div>
    </div>
    <div class="col-span-1 flex justify-center items-center">
      <div class="h-[350px] w-[350px] object-contain">
        <img src={imgAbout} alt={altImgAbout}>
      </div>
    </div>
  </div>
</section>

